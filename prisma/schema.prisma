generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Profile {
  id              String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name            String           @default("User")
  email           String           @unique
  password        String
  mobileNumber    String?          @map("mobile_number")
  role            Role             @default(user)
  membershipTier  MembershipTier   @default(none) @map("membership_tier")
  createdAt       DateTime         @default(now()) @map("created_at")

  heritageSites   HeritageSite[]
  payments        Payment[]
  supportTickets  SupportTicket[]
  supportMessages SupportMessage[]

  @@map("profiles")
}

model HeritageSite {
  id                 String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId             String        @map("user_id") @db.Uuid
  title              String
  description        String
  type               String?
  referenceLinks     String[]      @default([]) @map("reference_links")
  paymentStatus      PaymentStatus @default(NOT_STARTED) @map("payment_status")
  yatraStoryPrompted Boolean       @default(false) @map("yatra_story_prompted")
  createdAt          DateTime      @default(now()) @map("created_at")

  profile            Profile       @relation(fields: [userId], references: [id], onDelete: Cascade)
  images             SiteImage[]
  yatraStory         YatraStory?

  @@index([userId])
  @@index([type])
  @@index([createdAt(sort: Desc)])
  @@map("heritage_sites")
}

model SiteImage {
  id                 String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  siteId             String       @map("site_id") @db.Uuid
  location           String
  cloudinaryUrl      String?      @map("cloudinary_url")
  cloudinaryPublicId String?      @map("cloudinary_public_id")
  r2Url              String?      @map("r2_url")
  r2Key              String?      @map("r2_key")
  isVerified         Boolean      @default(false) @map("is_verified")
  cameraModel        String?      @map("camera_model")
  gpsLatitude        Float?       @map("gps_latitude") @db.DoublePrecision
  gpsLongitude       Float?       @map("gps_longitude") @db.DoublePrecision
  createdAt          DateTime     @default(now()) @map("created_at")

  site               HeritageSite @relation(fields: [siteId], references: [id], onDelete: Cascade)

  @@index([siteId])
  @@index([createdAt(sort: Desc)])
  @@map("site_images")
}

model Payment {
  id              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String        @map("user_id") @db.Uuid
  heritageSiteId  String?       @map("heritage_site_id") @db.Uuid
  amount          Float
  status          PaymentStatus @default(NOT_STARTED)
  paymentMethod   String?       @map("payment_method")
  transactionId   String?       @map("transaction_id")
  notes           String?
  paidAt          DateTime?     @map("paid_at")
  createdAt       DateTime      @default(now()) @map("created_at")

  profile         Profile       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt(sort: Desc)])
  @@map("payments")
}

model YatraStory {
  id                          String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId                      String       @map("user_id") @db.Uuid
  heritageSiteId              String       @unique @map("heritage_site_id") @db.Uuid

  title                       String       @db.VarChar(80)

  discoveryContext            String       @map("discovery_context") @db.Text

  journeyNarrative            String       @map("journey_narrative") @db.Text

  historicalIndicators        String[]     @default([]) @map("historical_indicators")
  historicalIndicatorsDetails String?      @map("historical_indicators_details") @db.Text

  evidenceTypes               String[]     @default([]) @map("evidence_types")

  safeVisuals                 String[]     @default([]) @map("safe_visuals")

  personalReflection          String?      @map("personal_reflection") @db.Text

  submissionConfirmed         Boolean      @default(false) @map("submission_confirmed")

  publishStatus               PublishStatus @default(PENDING_REVIEW) @map("publish_status")

  culturalInsights            String?      @map("cultural_insights") @db.Text

  createdAt                   DateTime     @default(now()) @map("created_at")
  updatedAt                   DateTime     @updatedAt @map("updated_at")

  heritageSite                HeritageSite @relation(fields: [heritageSiteId], references: [id], onDelete: Cascade)
  comments                    YatraComment[]
  likes                       YatraLike[]
  saves                       YatraSaved[]

  @@index([userId])
  @@index([publishStatus])
  @@index([createdAt(sort: Desc)])
  @@map("yatra_stories")
}

model YatraComment {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  storyId   String   @map("story_id") @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  comment   String   @db.Text
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  story     YatraStory @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@index([storyId])
  @@index([userId])
  @@index([createdAt(sort: Desc)])
  @@map("yatra_comments")
}

model YatraLike {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  storyId   String   @map("story_id") @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")

  story     YatraStory @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([storyId, userId])
  @@index([storyId])
  @@index([userId])
  @@map("yatra_likes")
}

model YatraSaved {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  storyId   String   @map("story_id") @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  createdAt DateTime @default(now()) @map("created_at")

  story     YatraStory @relation(fields: [storyId], references: [id], onDelete: Cascade)

  @@unique([storyId, userId])
  @@index([storyId])
  @@index([userId])
  @@map("yatra_saved")
}

enum Role {
  admin
  user
}

enum MembershipTier {
  none
  silver
  gold
  platinum
}

enum PaymentStatus {
  NOT_STARTED
  IN_PROGRESS
  COMPLETED
}

enum PublishStatus {
  PENDING_REVIEW
  APPROVED_PUBLIC
  FEATURED_YATRA
}

enum SiteType {
  TEMPLE
  FORT_PALACE
  CAVES_ROCK_CUT
  RUINS
  INSCRIPTIONS
  ROCK_ART
  MEGALITHIC_SITE
  BURIAL_SITE
  WATER_STRUCTURE
  ANCIENT_SETTLEMENT
  ARTIFACT_FOUND
  OTHER
}

model SupportTicket {
  id          String              @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String              @map("user_id") @db.Uuid
  subject     String
  status      TicketStatus        @default(OPEN)
  priority    TicketPriority      @default(MEDIUM)
  category    String?
  createdAt   DateTime            @default(now()) @map("created_at")
  updatedAt   DateTime            @updatedAt @map("updated_at")
  closedAt    DateTime?           @map("closed_at")

  profile     Profile             @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages    SupportMessage[]

  @@index([userId])
  @@index([status])
  @@index([createdAt(sort: Desc)])
  @@map("support_tickets")
}

model SupportMessage {
  id          String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  ticketId    String        @map("ticket_id") @db.Uuid
  userId      String        @map("user_id") @db.Uuid
  message     String        @db.Text
  isAdminReply Boolean      @default(false) @map("is_admin_reply")
  createdAt   DateTime      @default(now()) @map("created_at")

  ticket      SupportTicket @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  profile     Profile       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([ticketId])
  @@index([createdAt(sort: Desc)])
  @@map("support_messages")
}

enum TicketStatus {
  OPEN
  IN_PROGRESS
  WAITING_FOR_CUSTOMER
  RESOLVED
  CLOSED
}

enum TicketPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
